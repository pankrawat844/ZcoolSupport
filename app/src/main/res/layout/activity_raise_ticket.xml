<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewmodel"
            type="com.app.zcoolsupport.raiseticket.RaiseTicketViewModel" />
    </data>
<ScrollView

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/maven_pro_bold"
            android:text="Please fill the Complaint."
            android:textColor="#fff"
            android:textAllCaps="true"
            android:textSize="18dp" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/maven_pro_bold"
            android:text="Name"
            android:textColor="#fff"
            android:textAllCaps="true"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/rect_bg"
            android:fontFamily="@font/roboto_light"
            android:inputType="text"
            android:padding="5dp"
            android:hint=""
            android:textSize="15dp"
            android:textColor="#000"
            android:textColorHint="#d3d3d3" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/maven_pro_bold"
            android:text="Company Name"
            android:textColor="#fff"
            android:textAllCaps="true"
            android:textSize="18dp" />
        <EditText
            android:id="@+id/company_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rect_bg"
            android:padding="5dp"
            android:fontFamily="@font/roboto_light"
            android:hint=""
            app:ms_padding_left="0dp"
            app:ms_padding_right="0dp"
            app:ms_padding_top="0dp"
            app:ms_padding_bottom="0dp"
            android:inputType="text"
            android:textColor="#000"
            app:ms_popup_padding_left="2dp"
            android:textColorHint="#d3d3d3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/maven_pro_bold"
            android:text="Contact"
            android:textColor="#fff"
            android:textAllCaps="true"
            android:textSize="18dp" />
        <EditText
            android:id="@+id/phone_no"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rect_bg"
            android:fontFamily="@font/roboto_light"
            android:hint=""
            android:text=""
            android:inputType="phone"
            android:textSize="15dp"
            android:textColor="#000"
            android:textColorHint="#d3d3d3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/maven_pro_bold"
            android:text="Complaint Type"
            android:textColor="#fff"
            android:textAllCaps="true"
            android:textSize="18dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_bg"
            android:layout_marginTop="5dp"
            >
        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/complaint_type"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:fontFamily="@font/roboto_light"
            android:hint="Complaint Type"
            android:layout_margin="2dp"
            app:ms_padding_right="0dp"
            app:ms_padding_top="0dp"
            app:ms_padding_left="0dp"
            app:ms_popup_padding_left="2dp"
            app:ms_padding_bottom="0dp"
            android:inputType="text"
            android:textColor="#000"
            android:textColorHint="#d3d3d3" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/maven_pro_bold"
            android:text="Priority"
            android:textColor="#fff"
            android:textAllCaps="true"
            android:textSize="18dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_bg"
        android:layout_marginTop="5dp"
        >

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/priority"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:background="#00000000"
            android:fontFamily="@font/roboto_light"
            android:hint="Priority"
            app:ms_padding_left="0dp"
            app:ms_padding_right="0dp"
            app:ms_padding_top="0dp"
            app:ms_padding_bottom="0dp"
            app:ms_popup_padding_left="2dp"
            android:inputType="text"
            android:textColor="#000"
            android:textColorHint="#d3d3d3" />
    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/maven_pro_bold"
            android:text="Type"
            android:textColor="#fff"
            android:textAllCaps="true"
            android:textSize="18dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_bg"
        android:layout_marginTop="5dp"
        >
        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:background="#00000000"
            android:fontFamily="@font/roboto_light"
            android:hint="Type"
            app:ms_padding_left="0dp"
            app:ms_padding_right="0dp"
            app:ms_padding_top="0dp"
            app:ms_padding_bottom="0dp"
            app:ms_popup_padding_left="2dp"
            android:inputType="text"
            android:textColor="#000"
            android:textColorHint="#d3d3d3" />
    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/maven_pro_bold"
            android:text="Complaint"
            android:textColor="#fff"
            android:textAllCaps="true"
            android:textSize="18dp" />
        <EditText
            android:id="@+id/complaint"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rect_bg"
            android:fontFamily="@font/roboto_light"
            android:hint="Complaint"
            android:text=""
            android:textSize="15dp"

            android:padding="5dp"
            android:gravity="start"
            android:inputType="text"
            android:textColor="#000"
            android:textColorHint="#d3d3d3" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_bold"
            android:text=""
            android:textColor="#d3d3d3"
            android:textSize="14sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@+id/complaint"

            >

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="20dp"
                android:textSize="17dp"
                android:fontFamily="monospace"
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_bg"/>
        </FrameLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</layout>