<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewmodel"
            type="com.app.zcoolsupport.request.NewRequestViewModel" />
    </data>
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/maven_pro_bold"
                    android:text="Send Request To Us."
                    android:textColor="#444444"
                    android:textAllCaps="true"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="40dp"
                    android:background="#00000000"
                    android:fontFamily="@font/roboto_light"
                    android:inputType="text"
                    android:hint="Name"
                    android:text="@={viewmodel.name}"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:textColorHint="#d3d3d3" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#b9b9b9" />

                <EditText
                    android:id="@+id/client"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="#00000000"
                    android:fontFamily="@font/roboto_light"
                    android:hint="Client"
                    app:ms_padding_left="0dp"
                    app:ms_padding_right="0dp"
                    app:ms_padding_top="0dp"
                    app:ms_padding_bottom="0dp"
                    android:inputType="text"
                    android:text="@={viewmodel.client}"
                    android:textColor="#000"
                    app:ms_popup_padding_left="2dp"
                    android:textColorHint="#d3d3d3" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#b9b9b9" />
                <EditText
                    android:id="@+id/phone_no"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="#00000000"
                    android:fontFamily="@font/roboto_light"
                    android:hint="Phone Number"
                    android:text="@={viewmodel.phoneno}"
                    android:inputType="phone"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:textColorHint="#d3d3d3" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#b9b9b9" />
                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="#00000000"
                    android:fontFamily="@font/roboto_light"
                     android:hint="Email Id"
                    app:ms_padding_left="0dp"
                    app:ms_padding_right="0dp"
                    app:ms_padding_top="0dp"
                    app:ms_padding_bottom="0dp"
                    app:ms_popup_padding_left="2dp"
                    android:inputType="text"
                    android:text="@={viewmodel.email}"
                    android:textColor="#000"
                    android:textColorHint="#d3d3d3" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#b9b9b9" />





                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="20dp"
                    android:onClick="@{viewmodel::sendRequest}"
                    app:layout_constraintTop_toBottomOf="@+id/complaint"

                    >

                    <Button
                        android:id="@+id/submit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Submit"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:padding="20dp"
                        android:textSize="17dp"
                        android:fontFamily="monospace"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_bg"/>
                </FrameLayout>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>